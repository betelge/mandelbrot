<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.betel.mandelbrot.Mandel" >

    <LinearLayout
        android:id="@+id/HUD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Single precision (Default)" />

            <RadioButton
                android:id="@+id/radioED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emulate double precision" />

            <RadioButton
                android:id="@+id/radioExpED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use experimental 64 bit shader" />
            
            <RadioButton
                android:id="@+id/radioSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single precision in vertex shader" />
            
            <RadioButton
                android:id="@+id/radioEDV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emulate double precision in vertex shader" />
        </RadioGroup>

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

    </LinearLayout>

</FrameLayout>